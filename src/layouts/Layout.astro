---
import '@styles';
import { ClientRouter } from 'astro:transitions';
import Backgrounds from '@components/utilities/Backgrounds.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
const currentLanguage = Astro.originPathname.split('/').at(1);
---

<!doctype html>
<html lang={ currentLanguage } data-theme="dark" class="scroll-smooth">
	<head>
		<ClientRouter />
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{ title }</title>
	</head>
	<body class="text-black dark:text-white">
		<main class="max-w-4xl mx-auto">
			<Backgrounds />

			<slot />
		</main>
	</body>
</html>