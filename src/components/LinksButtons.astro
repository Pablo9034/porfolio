---
interface Props {
    href: string;
    colors: string;
}

const { href, colors  } = Astro.props;
console.log(colors ? true : false);
---

<a href={ href } class={`
    px-4 py-1 inline-flex items-center gap-1 border-2 shadow bg-transparent rounded-full active:scale-95 transition-[scale]
    ${ colors ? colors : 'text-gray-900 dark:text-gray-100 border-gray-900 dark:border-gray-100 shadow-black/60 dark:shadow-white/60' }
`}>
    <slot />
</a>