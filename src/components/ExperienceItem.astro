---
interface Props {
    subtitle: string;
    duration: string;
}

const { subtitle, duration } = Astro.props;
---

<li class="relative pl-5 flex flex-col gap-5 md:grid md:grid-cols-[300px_1fr] md:gap-10">
    <span class="absolute size-4 bg-blue-500 rounded-full -left-[9px] top-2.5"></span>
    
    <div>
        <h3 class="text-2xl font-semibold text-blue-500">{ subtitle }</h3>
        <span>{ duration }</span>
    </div>

    <div>
        <slot />
    </div>
</li>